{
  "name": "UCI_ML_Repository_Monorepo",
  "description": "A mono-repository of projects from the UCI ML Repository",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "web",
    "server"
  ],
  "scripts": {
    "setup": "npm i && husky install && npx prisma generate",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "format": "turbo run format",
    "lint": "turbo run lint"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "turbo": "^1.4.5"
  }
}
